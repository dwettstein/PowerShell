{
    "terraform": {
        "required_version": ">= 0.12"
    },
    "variable": {
        "server": {},
        "username": {},
        "password": {},
        "allow_unverified_ssl": {
            "default": false
        },
        "datacenter": {},
        "cluster": {},
        "host": {},
        "datastore": {},
        "network": {},
        "vm_template": {},
        "vm_name": {
            "default": ""
        },
        "vm_folder": {
            "default": "Terraform"
        },
        "vm_cpu": {
            "default": 1
        },
        "vm_cpu_cores_per_socket": {
            "default": 1
        },
        "vm_memory_mb": {
            "default": 256
        },
        "vm_count": {
            "default": 1
        }
    },
    "provider": {
        "vsphere": {
            "vsphere_server": "${var.server}",
            "user": "${var.username}",
            "password": "${var.password}",
            "allow_unverified_ssl": "${var.allow_unverified_ssl}"
        }
    },
    "data": {
        "vsphere_datacenter": {
            "dc1": {
                "name": "${var.datacenter}"
            }
        },
        "vsphere_compute_cluster": {
            "cl1": {
                "name": "${var.cluster}",
                "datacenter_id": "${data.vsphere_datacenter.dc1.id}"
            }
        },
        "vsphere_host": {
            "ho1": {
                "name": "${var.host}",
                "datacenter_id": "${data.vsphere_datacenter.dc1.id}"
            }
        },
        "vsphere_datastore": {
            "ds1": {
                "name": "${var.datastore}",
                "datacenter_id": "${data.vsphere_datacenter.dc1.id}"
            }
        },
        "vsphere_network": {
            "nw1": {
                "name": "${var.network}",
                "datacenter_id": "${data.vsphere_datacenter.dc1.id}"
            }
        },
        "vsphere_virtual_machine": {
            "tpl1": {
                "name": "${var.vm_template}",
                "datacenter_id": "${data.vsphere_datacenter.dc1.id}"
            }
        }
    },
    "resource": {
        "random_uuid": {
            "vm_uuid": {
                "count": "${var.vm_count}"
            }
        },
        "vsphere_virtual_machine": {
            "vm": {
                "count": "${var.vm_count}",
                "name": "${var.vm_name != \"\" ? (var.vm_count > 1 ? format(\"%s-%s\", var.vm_name, (count.index + 1)) : var.vm_name) : format(\"vm-%s\", random_uuid.vm_uuid[count.index].result)}",
                "guest_id": "${data.vsphere_virtual_machine.tpl1.guest_id}",
                "resource_pool_id": "${data.vsphere_compute_cluster.cl1.resource_pool_id}",
                "host_system_id": "${data.vsphere_host.ho1.id}",
                "datastore_id": "${data.vsphere_datastore.ds1.id}",
                "folder": "${var.vm_folder}",
                "num_cpus": "${var.vm_cpu}",
                "num_cores_per_socket": "${var.vm_cpu_cores_per_socket}",
                "memory": "${var.vm_memory_mb}",
                "clone": {
                    "template_uuid": "${data.vsphere_virtual_machine.tpl1.id}"
                },
                "disk": {
                    "label": "disk0",
                    "unit_number": 0,
                    "size": "${data.vsphere_virtual_machine.tpl1.disks.0.size}",
                    "eagerly_scrub": "${data.vsphere_virtual_machine.tpl1.disks.0.eagerly_scrub}",
                    "thin_provisioned": "${data.vsphere_virtual_machine.tpl1.disks.0.thin_provisioned}"
                },
                "network_interface": {
                    "network_id": "${data.vsphere_network.nw1.id}"
                },
                "wait_for_guest_net_timeout": 0,
                "wait_for_guest_net_routable": false,
                "extra_config": {
                    "//": "Can be removed if not needed.",
                    "guestinfo.metadata": "${base64gzip(templatefile(\"${path.module}/cloud-init/metadata.yaml\", { \"instance_id\" = random_uuid.vm_uuid[count.index].result, \"hostname\" = (var.vm_name != \"\" ? (var.vm_count > 1 ? format(\"%s-%s\", var.vm_name, (count.index + 1)) : var.vm_name) : format(\"vm-%s\", random_uuid.vm_uuid[count.index].result)) }))}",
                    "guestinfo.metadata.encoding": "gzip+base64",
                    "guestinfo.userdata": "${base64gzip(templatefile(\"${path.module}/cloud-init/userdata.yaml\", { \"hostname\" = (var.vm_name != \"\" ? (var.vm_count > 1 ? format(\"%s-%s\", var.vm_name, (count.index + 1)) : var.vm_name) : format(\"vm-%s\", random_uuid.vm_uuid[count.index].result)) }))}",
                    "guestinfo.userdata.encoding": "gzip+base64"
                }
            }
        }
    }
}

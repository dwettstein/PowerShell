{
    "terraform": {
        "required_version": ">= 0.12"
    },
    "variable": {
        "server": {},
        "username": {},
        "password": {},
        "org": {},
        "vdc": {},
        "max_retry_timeout": {
            "default": 60
        },
        "allow_unverified_ssl": {
            "default": false
        },
        "network": {},
        "catalog": {},
        "template": {},
        "vapp": {
            "default": "Terraform"
        },
        "vm_name": {
            "default": ""
        },
        "vm_cpu": {
            "default": 1
        },
        "vm_cpu_cores_per_socket": {
            "default": 1
        },
        "vm_memory_mb": {
            "default": 256
        },
        "vm_count": {
            "default": 1
        }
    },
    "provider": {
        "vcd": {
            "url": "https://${var.server}/api",
            "user": "${var.username}",
            "password": "${var.password}",
            "org": "${var.org}",
            "vdc": "${var.vdc}",
            "max_retry_timeout": "${var.max_retry_timeout}",
            "allow_unverified_ssl": "${var.allow_unverified_ssl}"
        }
    },
    "resource": {
        "random_uuid": {
            "vm_uuid": {
                "count": "${var.vm_count}"
            }
        },
        "vcd_vapp": {
            "vapp": {
                "name": "${var.vapp}"
            }
        },
        "vcd_vapp_org_network": {
            "vapp_nw": {
                "vapp_name": "${vcd_vapp.vapp.name}",
                "org_network_name": "${var.network}"
            }
        },
        "vcd_vapp_vm": {
            "vm": {
                "count": "${var.vm_count}",
                "vapp_name": "${vcd_vapp.vapp.name}",
                "name": "${var.vm_name != \"\" ? (var.vm_count > 1 ? format(\"%s-%s\", var.vm_name, (count.index + 1)) : var.vm_name) : format(\"vm-%s\", random_uuid.vm_uuid[count.index].result)}",
                "computer_name": "${var.vm_name != \"\" ? (var.vm_count > 1 ? format(\"%s-%s\", var.vm_name, (count.index + 1)) : var.vm_name) : format(\"vm-%s\", random_uuid.vm_uuid[count.index].result)}",
                "catalog_name": "${var.catalog}",
                "template_name": "${var.template}",
                "cpus": "${var.vm_cpu}",
                "cpu_cores": "${var.vm_cpu_cores_per_socket}",
                "memory": "${var.vm_memory_mb}",
                "network": {
                    "type": "org",
                    "name": "${var.network}",
                    "ip_allocation_mode": "DHCP"
                },
                "guest_properties": {
                    "//": "Can be removed if not needed.",
                    "hostname": "${var.vm_name != \"\" ? (var.vm_count > 1 ? format(\"%s-%s\", var.vm_name, (count.index + 1)) : var.vm_name) : format(\"vm-%s\", random_uuid.vm_uuid[count.index].result)}",
                    "instance-id": "${random_uuid.vm_uuid[count.index].result}",
                    "user-data": "${base64encode(templatefile(\"${path.module}/cloud-init/user-data.yaml\", { \"instance_id\" = random_uuid.vm_uuid[count.index].result, \"hostname\" = (var.vm_name != \"\" ? (var.vm_count > 1 ? format(\"%s-%s\", var.vm_name, (count.index + 1)) : var.vm_name) : format(\"vm-%s\", random_uuid.vm_uuid[count.index].result)) }))}"
                }
            }
        }
    }
}
